<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.breakoutgame.InstructionsActivity"
    android:elevation="5dp">

    <!--Header-->
    <TextView
        android:text="INSTRUCTIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/inst_header"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <!--Paddle text-->
    <TextView
        android:text="Paddle :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/inst_paddle"
        android:layout_below="@+id/inst_header"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:gravity="center"
        tools:textStyle="bold"
        android:shadowColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:textStyle="normal|bold"/>

    <TextView
        android:text="Move the paddle horizontally to allow the ball to bounce off to hit the bricks. If the ball misses the paddle, the game ends."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst_paddle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:id="@+id/inst_paddle_text"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"/>

    <!--Ball text-->
    <TextView
        android:text="Ball :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/inst_ball"
        android:layout_below="@+id/inst_paddle_text"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:gravity="center"
        tools:textStyle="bold"
        android:shadowColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:textStyle="normal|bold"/>

    <!--Ball text-->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst_ball"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:id="@+id/inst_ball_text"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"/>

    <!--Win text-->
    <TextView
        android:text="To Win :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/inst_win"
        android:layout_below="@+id/inst_ball_text"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:gravity="center"
        tools:textStyle="bold"
        android:shadowColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:textStyle="normal|bold"/>

    <TextView
        android:text="High Score is based on the total time taken to break all the bricks. The winner takes the least time to break all the bricks."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inst_win"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:id="@+id/inst_paddle_win"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"/>

</RelativeLayout>
